{
  "name": "code-analysis-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Code Analysis and Documentation - Learning Project",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "setup": "npm run build",
    "analyze": "ts-node src/cli.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-analysis",
    "static-analysis",
    "ast",
    "typescript",
    "software-engineering"
  ],
  "author": "Learning MCP",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@typescript-eslint/parser": "^6.7.4",
    "@typescript-eslint/typescript-estree": "^6.7.4",
    "acorn": "^8.10.0",
    "acorn-walk": "^8.2.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "glob": "^10.3.10",
    "mime-types": "^2.1.35",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/lodash": "^4.14.199",
    "@types/mime-types": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 